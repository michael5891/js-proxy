{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "downlevelIteration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest"
    ]
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
